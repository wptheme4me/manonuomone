extends ./default.pug

block header
 include ./partials/header-profile.pug
 
block main
 include ./partials/top-dashboard.pug
 .r
  .c25
   include ./partials/profile-left-menu.pug
  
  #surveypage.c7
   section
    span Number in brackers indicates how many surveys user can take
    h1 Quick surveys (4)
    -var i=1;
     while i < 5
      article
       .r 
        .c7
         img(src="https://via.placeholder.com/150x150?text=Photo+A", alt="Image")
         span VS
         img(src="https://via.placeholder.com/150x150?text=Photo+B", alt="Image")
         p Lorem Ipsum is simply dummy text of the printing and typesetting industry?
        .c30.text-right
         p <span class="points">+#{i++}</span> points for this survey
         a(href="#", title="title").button See results
         
   .r
    .c0 
     section
      h1 Your past surveys! 
      -var i=1;
      while i < 3
       article
        .r 
         .c7
          img(src="https://via.placeholder.com/150x150?text=Photo", alt="Image")
          img.inactive(src="https://via.placeholder.com/150x150?text=Your+selection", alt="Image")
          p Lorem Ipsum is simply dummy text of the printing and typesetting industry?
         .c30.text-right
          p Points your earned <br> <span class="points">3#{i++}</span>